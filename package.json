  "keywords": [],
  "author": "Dylan Vause",
  "license": "",
  "devDependencies": {
    "electron": "^12.0.4",
    "electron-builder": "^22.10.5"
  },
  "dependencies": {
    "electron-reload": "^1.5.0",
    "jest": "^27.3.0",
    "mathjs": "^9.3.2",
    "spectron": "^14.0.0"
  }
